<launch>

  <!-- For details on setting this parameter, see:
         http://wiki.ros.org/joy/Tutorials/ConfiguringALinuxJoystick -->
  <param name="/joy_node/dev" type="string" value="/dev/input/js0" />

  <node name="joy" pkg="joy" type="joy_node" output="screen"/>

  <arg name="output_topic" value="/lat_lon_joystick/command"/>
  <node
    name="joystick_msg_transform"
    pkg="topic_tools"
    type="transform"
    args="/joy $(arg output_topic) controller_interface_msgs/LatLonCommand 'lat_lon_joystick.JoyMsg2LatLonCommand(m)' --import lat_lon_joystick"
    output="screen"/>
</launch>
