<launch>

  <!-- Optionally set via command line -->
  <arg name="width" default="80"/>
  <arg name="height" default="60"/>
  <arg name="framerate" default="30"/>
  <arg name="camera_frame_id" default="raspicam"/>

  <node type="raspicam_node" pkg="raspicam_node" name="raspicam_node" output="screen">
	  <param name="camera_info_url" value="package://raspicam_node/camera_info/camerav2_1280x960.yaml"/>
		<param name="width" value="$(arg width)"/>
		<param name="height" value="$(arg height)"/>
		<param name="framerate" value="$(arg framerate)"/>
    <param name="vFlip" value="false"/>
    <param name="hFlip" value="false"/>
    <param name="brightness" value="55"/>
		<param name="camera_frame_id" value="$(arg camera_frame_id)"/>
	</node>
</launch>
